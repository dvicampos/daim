<h2>Editar publicación</h2>

<form action="/blog/<%= publicacion.id %>/editar" method="POST">
    <div class="form-group">
        <label>Título:</label>
        <input type="text" name="titulo" class="form-control" value="<%= publicacion.titulo %>" required>
    </div>

    <div class="form-group mt-2">
        <label>Contenido:</label>
        <textarea name="contenido" class="form-control" rows="5" required><%= publicacion.contenido %></textarea>
    </div>

    <h5 class="mt-3">Archivos actuales:</h5>
    <div class="row">
        <% archivos.forEach(archivo => { %>
            <div class="col-md-4 mt-2">
                <% if (archivo.tipo === 'imagen') { %>
                    <img src="/<%= archivo.archivo %>" class="img-fluid rounded">
                <% } else if (archivo.tipo === 'video') { %>
                    <video controls class="w-100 rounded">
                        <source src="/<%= archivo.archivo %>">
                    </video>
                <% } %>
            </div>
        <% }) %>
    </div>

    <button class="btn btn-primary mt-3">Guardar cambios</button>
</form>
