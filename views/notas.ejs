<style>
    .table-wrapper {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }
</style>
<h1 class="text-center">Bloc de notas</h1>

<form action="/crear-nota" method="POST" class="mt-4">
    <div class="form-group">
        <label for="titulo">T√≠tulo:</label>
        <input type="text" class="form-control" name="titulo" required>
    </div>
    <div class="form-group">
        <label for="contenido">Contenido:</label>
        <textarea class="form-control" name="contenido" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Agregar nota</button>
</form>

<h2 class="mt-4">Notas</h2>
<div class="table-wrapper">
    <div class="container">
        <div class="row">
            <% notas.forEach(nota => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted"><%= nota.titulo %></h6>
                            <p class="card-text"><strong>Descripcion: </strong><%= nota.contenido %></p>
                            <% if (rol === 'admin' || rol === 'editor') { %>
                                <a href="/editar-nota/<%= nota.id %>" class="btn btn-warning m-1">‚úèÔ∏è</a>
                                <a href="/eliminar-nota/<%= nota.id %>" class="btn btn-danger m-1">üóëÔ∏è</a>
                            <% } else { %>
                                    <p>Sin permisos</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    
</div>