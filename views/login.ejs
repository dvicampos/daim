<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Iniciar sesión - DavaniTechnology</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="shortcut icon" href="/img/logo.png" type="image/x-icon">

  <style>
    body {
      background: url(/img/bg-textura.png) no-repeat center center fixed;
      background-size: cover;
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 20px;
    }

    .circle-logo {
      position: absolute;
      top: 30px;
      left: 50%;
      transform: translateX(-50%);
      width: 90px;
      height: 90px;
      background-color: #fff;
      border-radius: 50%;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 10;
    }

    .circle-logo img {
      width: 75%;
      height: 75%;
      border-radius: 50%;
    }

    .card {
      width: 100%;
      max-width: 400px;
      position: relative;
      z-index: 5;
    }

    .card-header {
      text-align: center;
      background-color: #f8f9fa;
      border-bottom: none;
    }

    .form-group label {
      text-align: left;
      display: block;
      margin-bottom: 5px;
      font-weight: 500;
    }

    .form-check-label {
      font-size: 0.9rem;
    }

    .btn-success {
      width: 100%;
    }

    .alert {
      z-index: 1050;
    }
  </style>
</head>

<body>
  <!-- Mensajes de alerta -->
  <% if (success && success.length > 0) { %>
    <% success.forEach(function(msg) { %>
      <div class="alert alert-success alert-dismissible fade show position-fixed top-0 end-0 m-3" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
      </div>
    <% }) %>
  <% } %>

  <% if (error && error.length > 0) { %>
    <% error.forEach(function(msg) { %>
      <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 end-0 m-3" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
      </div>
    <% }) %>
  <% } %>

  <!-- Contenedor principal -->
  <div class="container">
    <a class="circle-logo" href="/">
      <img src="/img/logo.png" alt="Logo DavaniTechnology">
    </a>

    <div class="card shadow-lg">
      <div class="card-header">
        <h5 class="card-title mb-0">Iniciar sesión</h5>
      </div>
      <div class="card-body">
        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Correo electrónico</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese su email" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña" required>
            <div class="form-check mt-2">
              <input type="checkbox" class="form-check-input" id="mostrarContrasena" onclick="togglePassword()">
              <label class="form-check-label" for="mostrarContrasena">Mostrar contraseña</label>
            </div>
          </div>
          <div class="mb-3">
            <button type="submit" class="btn btn-success">Iniciar sesión</button>
          </div>
          <div class="text-center">
            <p class="mb-1">¿No tienes una cuenta? <a href="/create-group">Comenzar desde 0</a></p>
            <p><a href="/forgot-password">¿Olvidaste tu contraseña?</a></p>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    function togglePassword() {
      const passwordInput = document.getElementById("password");
      passwordInput.type = passwordInput.type === "password" ? "text" : "password";
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
