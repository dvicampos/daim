<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registro - DavaniTechnology</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="/img/logo.png" type="image/x-icon">
    <style>
        /* Estilo para centrar la card */
        body{
            background: url(/img/bg-textura.png);
            background-size: cover;
            margin: 0;
        }
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .card {
            width: 30rem;
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .step-indicator {
            font-size: 1.1rem;
            font-weight: bold;
        }
        .progress {
            height: 8px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="card p-4">
            
            <!-- Indicador de pasos -->
            <div class="text-center mb-3">
                <span class="step-indicator">Paso 2 de 2: Registro de usuario</span>
                <div class="progress mt-2">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>

            <h5 class="text-center">Registrarme</h5>
            <div class="card-body">
                <form action="/register" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" for="nombre">Nombre</label>
                                <input class="form-control" type="text" name="nombre" placeholder="Nombre" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" for="apellido">Apellido</label>
                                <input class="form-control" type="text" name="apellido" placeholder="Apellido" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="email" name="email" placeholder="Email" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" for="telefono">Teléfono</label>
                                <input class="form-control" type="text" name="telefono" placeholder="Teléfono" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <input type="hidden" class="form-control" type="text" name="especialidad" placeholder="Especialidad" readonly value="admin" required>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" for="password">Contraseña</label>
                                <input class="form-control" type="password" name="password" placeholder="Contraseña" required>
                            </div>
                        </div>
                    </div>

                    <!-- Grupo -->
                    <div class="mb-3">
                        <label class="form-label">Grupo:</label>
                        <select class="form-control" name="grupo_id" id="grupoSelect">
                            <option value="">Selecciona un grupo</option>
                            <% grupos.forEach(grupo => { %>
                                <option value="<%= grupo.id %>">
                                    <%= grupo.nombre_empresa %>
                                </option>
                            <% }); %>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Registrarse</button>
                </form>

                <p class="mt-3 text-center">Ya tengo usuario <a href="/login">iniciar</a></p>
                <p class="text-center">¿No encuentras tu grupo? <a href="/create-group">Crea uno aquí</a></p>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const selectedGroup = localStorage.getItem('nombre_empresa');
	    if(!selectedGroup){
                alert("No a creado ningun grupo")
                location.href ="https://davanitechnology.com/create-group"
            }
            if (selectedGroup) {
                const selectElement = document.getElementById('grupoSelect');
                const options = selectElement.querySelectorAll('option');
                options.forEach(option => {
                    if (option.textContent.trim() === selectedGroup) {
                        option.selected = true;
                    }
                });

                // Ocultar otras opciones para evitar confusión
                options.forEach(option => {
                    if (option.textContent.trim() !== selectedGroup && option.value !== "") {
                        option.style.display = 'none';
                    }
                });
            }
        });
    </script>  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
