<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Davani Technology</title>

  <!-- Favicon -->
  <link rel="shortcut icon" href="/img/logo.png" type="image/x-icon">

  <!-- Bootstrap & AdminLTE -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/css/adminlte.min.css">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  
  <style>
    .main-sidebar {
      background: #343a40; /* más elegante */
    }

    .brand-link {
      background: #212529;
      color: #fff;
    }

    .nav-sidebar .nav-link.active {
      background-color: #17a2b8 !important;
      color: white !important;
    }

    .nav-sidebar .nav-link:hover {
      background-color: #138496;
      color: white !important;
    }

    .navbar {
      background-color: #f8f9fa;
    }

    #version-hora {
      font-weight: bold;
      color: #17a2b8;
    }

    .brand-logo {
      border: 2px solid #17a2b8;
    }
  </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">
  <% if (success && success.length > 0) { %>
    <% success.forEach(function(msg) { %>
        <div class="alert alert-success alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 1050; min-width: 250px;" role="alert">
            <%= msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    <% }) %>
<% } %>

<% if (error && error.length > 0) { %>
    <% error.forEach(function(msg) { %>
        <div class="alert alert-danger alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 1050; min-width: 250px;" role="alert">
            <%= msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    <% }) %>
<% } %>
  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-light">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button">
          <i class="fas fa-bars"></i>
        </a>
      </li>
    </ul>

    <span class="ml-auto mr-3">
      <i class="far fa-clock"></i> <span id="version-hora"></span>
    </span>

    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link text-danger" href="/logout" title="Cerrar sesión">
          <i class="fas fa-power-off"></i>
        </a>
      </li>
    </ul>
  </nav>

  <!-- Sidebar -->
  <aside class="main-sidebar elevation-4">
    <a href="/dashboard" class="brand-link d-flex align-items-center">
      <img src="<%= grupo.foto_perfil ? '/uploads/' + grupo.foto_perfil.split('/').pop() : '/img/default_logo.png' %>"
           alt="Logo" class="brand-logo img-circle elevation-2"
           style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;">
      <span class="brand-text font-weight-light">
        <%= grupo.nombre_empresa || 'Nombre del Grupo' %>
      </span>
    </a>

    <div class="sidebar">
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" role="menu">
          <li class="nav-item"><a href="/dashboard" class="nav-link"><i class="nav-icon fas fa-home"></i><p>Inicio</p></a></li>
          <li class="nav-item"><a href="/clientes" class="nav-link"><i class="nav-icon fas fa-users"></i><p>Clientes</p></a></li>
          <li class="nav-item"><a href="/casos" class="nav-link"><i class="nav-icon fas fa-briefcase"></i><p>Servicios</p></a></li>
          <li class="nav-item"><a href="/categorias" class="nav-link"><i class="nav-icon fas fa-tags"></i><p>Productos</p></a></li>
          <li class="nav-item"><a href="/notas" class="nav-link"><i class="nav-icon fas fa-sticky-note"></i><p>Notas</p></a></li>
          <li class="nav-item"><a href="/recordatorios" class="nav-link"><i class="nav-icon fas fa-clock"></i><p>Recordatorios</p></a></li>
          <li class="nav-item"><a href="/contactos" class="nav-link"><i class="nav-icon fas fa-envelope"></i><p>Mensajes</p></a></li>
          <li class="nav-item"><a href="/blogs" class="nav-link"><i class="nav-icon fas fa-blog"></i><p>Blogs</p></a></li>
        </ul>
      </nav>
    </div>
  </aside>

  <!-- Content Wrapper -->
  <div class="content-wrapper">
    <section class="content pt-4">
      <div class="container-fluid">
        <%- body %>
      </div>
    </section>
  </div>

  <!-- Footer -->
  <footer class="main-footer text-center">
    <strong>&copy; 2025 Sistema <%= grupo.nombre_empresa %></strong> |
    Desarrollado por <a href="https://davanitechnology.com/" target="_blank">Davani Technology</a>
  </footer>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/js/adminlte.min.js"></script>

<script>
  function actualizarHora() {
    const ahora = new Date();
    const hora = ahora.toLocaleTimeString();
    document.getElementById("version-hora").innerText = hora;
  }
  actualizarHora();
  setInterval(actualizarHora, 1000);

  setTimeout(function () {
        $('.alert').alert('close');
    }, 4000);
</script>

<!-- Google Ads (opcional) -->
<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8911862194691129" crossorigin="anonymous"></script>

</body>
</html>
